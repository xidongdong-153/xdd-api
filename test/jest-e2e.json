{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1"
  },
  "roots": [
    "<rootDir>",
    "<rootDir>/../src/"
  ],
  "moduleDirectories": [
    "node_modules",
    "<rootDir>/../"
  ],
  "testTimeout": 20000
}